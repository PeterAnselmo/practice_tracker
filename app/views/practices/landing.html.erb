<div style = 'text-align: center'>
<h1>What Should I Practice?</h1>

<div id='practice-item' data-item-id="<%= @item.id %>" style="font-size: 70px;"><%= @item %></div>
<div>(<%= @item.instrument %>)</div>

<div class="buttons-wrapper">
	<p class="elapsed-time-text" style="font-size: 60px">00:00</p>
	<div class="buttons-container">
		<button class="button is-primary is-large" type="button" id="start-button" *ngIf="displayStartButton" onclick="startStopwatch()">START</button>
		<button class="button is-primary is-large" type="button" id="stop-button" *ngIf="!displayStartButton" onclick="stopStopwatch()">STOP</button>
		<button class="button is-primary is-large" type="button" onclick="resetStopwatch()" style="margin-left:20px">RESET</button>
	</div>
</div>
<script src="/time-and-date-handling.js"></script>
<script src="/stopwatch.js"></script>
<br />
<button class="button is-info is-large" id="record-practice">Save Practice</button>

<span id="practice-save-success" style="display:none" class="icon has-text-success">
  <i class="fas fa-check-square"></i>
</span>
</div>
